<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/rGroup"
        android:layout_width="308dp"
        android:layout_height="344dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rTimer"
            android:layout_width="311dp"
            android:layout_height="66dp"
            android:text="Timer"
            android:textColor="#171717"
            android:textSize="30sp"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/rSamplePapers"
            android:layout_width="311dp"
            android:layout_height="66dp"
            android:text="Sample Papers"
            android:textColor="#030403"
            android:textSize="30sp"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/rQuiz"
            android:layout_width="311dp"
            android:layout_height="66dp"
            android:text="Practice Papers"
            android:textColor="#030403"
            android:textSize="30sp" />

    </RadioGroup>

    <Button
        android:id="@+id/Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="32dp"
        android:background="#03A9F4"
        android:text="Next"
        android:textColor="#090909"
        app:layout_constraintEnd_toEndOf="@+id/rGroup"
        app:layout_constraintStart_toStartOf="@+id/rGroup"
        app:layout_constraintTop_toBottomOf="@+id/rGroup" />
</androidx.constraintlayout.widget.ConstraintLayout>